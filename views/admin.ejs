    <label for="numDays">Number of Days:</label>
    <input type="number" id="numDays" name="numDays" min="1" required>
    <div id="daysSection">
    </div>

    <button type="button" onclick="addDays()">Add Days</button>
        <button type="submit">Add Package</button>
    </form>

    <script>
        function addDays() {
            const numDays = document.getElementById("numDays").value;
            const daysSection = document.getElementById("daysSection");

            daysSection.innerHTML = '';

            for (let i = 1; i <= numDays; i++) {
                const dayDiv = document.createElement('div');
                dayDiv.innerHTML = `
                    <h4 class="day-head">Day ${i} Details:</h4>
                    <input type="text" name="day${i}_title" placeholder="Day ${i} Title" required>
                    <textarea class="day-detail" name="day${i}_details" placeholder="Day ${i} Details" required></textarea>
                `;
                daysSection.appendChild(dayDiv);
            }
        }
    </script>




